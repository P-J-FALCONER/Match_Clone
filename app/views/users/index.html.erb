<div class="row">
  <div class="col-lg-3 col-sm-3 col-md-3">

  </div>
  <div class="col-lg-6 col-sm-6 col-md-6">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search Matches...">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">Go!</button>
      </span>
    </div>
  </div>
  <div class="col-lg-3 col-sm-3 col-md-3">

  </div>
</div>
<div class="row">
  <%= will_paginate %>
  <table class="table table-hover">
    <thead>
      <th style="color: black;">Name</th>
      <th style="color: black;">Ranking</th>
    </head>
    <tbody>
      <% @ranking.sort_by {|_key, value| value}.reverse.each do |user| %>
        <% @possible_matches.each do |match| %>
          <% if match.user_id == user[0] %>
            <tr>
              <td style="color: black;"><%= match.user.first_name %> <%= match.user.last_name %></td>
              <td style="color: black;">Ranking: <%= user[1]%></td>
              <td><%= form_for @match_room do |f| %>
                    <%= f.hidden_field :receiver_id, value: user[0] %>
                      <%= f.submit 'Get a room' %>
                       <% end %></td>
            </tr>
      <% end %>
    <% end %>
  <% end %>
    </tbody>
  </table>
  <%= will_paginate %>
</div>

