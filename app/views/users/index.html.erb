<div class="row">
  <% @ranking.sort_by {|_key, value| value}.reverse.each do |user| %>
    <% @possible_matches.each do |match| %>
      <% if match.user_id == user[0] %>
        <h3 style="color: black;"><%= match.user.first_name %> <%= match.user.last_name %></h3>
        <h3 style="color: black;"> Ranking: <%= user[1]%></h3>
        <%= form_for @match_room do |f| %>
          <%= f.hidden_field :receiver_id, value: user[0] %>
          <%= f.submit 'Get a room' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>

